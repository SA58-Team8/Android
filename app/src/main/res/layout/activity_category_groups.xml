<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CategoryGroups"
    android:background="#E2EBEF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white">
        <TextView
            android:id="@+id/category_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkblue"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="CategoryName"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_height="1dp"
            android:background="@color/black" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >

            <FrameLayout
                android:id="@+id/filter_button_in_group"
                android:layout_width="80dp"
                android:layout_height="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/category_ripple">

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/search_filter_vector"/>
            </FrameLayout>
            <Button
                android:id="@+id/condition1_button_in_group"
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.43"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Time"
                android:textColor="@color/darkblue"
                android:textSize="25sp"
                android:textAllCaps="false"
                android:background="@drawable/category_ripple"/>

            <Button
                android:id="@+id/condition2_button_in_group"
                android:layout_width="110dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.85"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Distance"
                android:textAllCaps="false"
                android:textColor="@color/darkblue"
                android:textSize="24sp"
                android:background="@drawable/category_ripple"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/search_filter_cardview_in_group"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/filter_button_in_group">

                <LinearLayout
                    android:id="@+id/filter_options_layout_in_group"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:background="@color/white"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/filter_button">

                    <CheckBox
                        android:id="@+id/option1_in_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:layout_margin="5dp"
                        android:textColor="@color/darkblue"
                        android:buttonTint="@color/checkbox_color"
                        android:text="less than 10" />

                    <CheckBox
                        android:id="@+id/option2_in_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:layout_margin="5dp"
                        android:textColor="@color/darkblue"
                        android:buttonTint="@color/checkbox_color"
                        android:text="10-20" />

                    <CheckBox
                        android:id="@+id/option3_in_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:layout_margin="5dp"
                        android:textColor="@color/darkblue"
                        android:buttonTint="@color/checkbox_color"
                        android:text="over 30" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/filter_button_in_group"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="vertical">
                <Button
                    android:id="@+id/test_to_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>